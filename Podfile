# Uncomment the next line to define a global platform for your project
# platform :ios, '10.0'

target 'SearchApp' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  #Architecture
  pod 'ReactorKit'
  pod 'RxFlow'
  
  # Rx
  pod  "RxSwift"
  pod  "RxCocoa"
  pod  "RxSwiftExt"
  pod  "RxOptional"
  pod  "RxViewController"
  pod  "RxAnimated"
  
  #UI
  pod  "SnapKit"
  pod  "Reusable"
  pod  "Kingfisher"
  
  # Network
  pod  'Moya'
  
  ## Parsing
  pod  'SwiftyJSON'
  
  # Misc.
  pod "Then"
  pod "SwiftyUserDefaults"
  pod 'RxDataSources'
  # pod 'Result', '~> 5.0'
  
  # Log
  pod  'CocoaLumberjack/Swift'

  target 'SearchAppTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
    pod 'RxTest'
    pod 'RxBlocking'
  end

end
